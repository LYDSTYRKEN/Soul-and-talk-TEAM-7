<Window x:Class="Soul_and_talk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Soul_and_talk.ViewModel"
        Title="Income overview" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type vm:OverviewNode}"
                                  ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Soul and talk - income overview"
                       FontSize="24" FontWeight="Bold" />
        </StackPanel>

        <TreeView Grid.Row="1" Margin="10"
                  ItemsSource="{Binding RootNodes}" />

        <Button Grid.Row="2" Margin="10"
                Height="35"
                Content="Add income"
                Command="{Binding AddIncomeCommand}" />
    </Grid>
</Window>
