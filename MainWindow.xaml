<Window x:Class="Soul_and_talk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Soul_and_talk.ViewModel"
        Title="Income overview" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type vm:OverviewNode}"
                                  ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Soul and talk - income overview"
                       FontSize="24" FontWeight="Bold" />
        </StackPanel>

        <TreeView Grid.Row="1" Margin="10"
                  ItemsSource="{Binding RootNodes}" />

        <!-- Nederst i MainWindow.xaml -->
        <StackPanel Grid.Row="2"
                Margin="10"
                Orientation="Horizontal"
                HorizontalAlignment="Left">

            <Button Content="Register new customer"
                Width="160"
                Margin="0,0,8,0"
                Command="{Binding AddCustomerCommand}" />

            <Button Content="Add income"
                Width="100"
                Command="{Binding AddIncomeCommand}" />
        </StackPanel>
    </Grid>
</Window>
