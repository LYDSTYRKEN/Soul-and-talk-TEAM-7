<Window x:Class="Soul_and_talk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Soul_and_talk.ViewModel"
        Title="Income overview" Height="450" Width="400">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type vm:OverviewNode}"
                                  ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Bogføringsprogram"
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"/>

            <TextBlock Text="Oversigt over indtægter"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Light"
                Margin="0,5,0,0"/>
        </StackPanel>

        <TreeView Grid.Row="1" Grid.Column="0"
          Margin="10,0,10,0"
          ItemsSource="{Binding RootNodes}">
        </TreeView>

        <!-- Nederst i MainWindow.xaml -->
        <StackPanel Grid.Row="2"
                Margin="10"
                Orientation="Horizontal"
                HorizontalAlignment="Center">

            <Button 
                Content="Registrer Ny Kunde"
                    FontSize="15" 
                    FontWeight="Bold"
                    FontFamily="Corbel"
                Width="170"
                Margin="0,0,10,0"
                Command="{Binding AddCustomerCommand}" />

            <Button 
                Content="Tilføj Indtægt"
                    FontSize="15" 
                    FontWeight="Bold"
                    FontFamily="Corbel"
                Width="125"
                 Margin="0,0,0,0"
                Command="{Binding AddIncomeCommand}" />
        </StackPanel>
    </Grid>
</Window>
