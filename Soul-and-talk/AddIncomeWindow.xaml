<Window x:Class="Soul_and_talk.AddIncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registrer indkomst"
        Height="400"
        Width="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <!-- Vælg eksisterende kunde -->
            <TextBlock Text="Eksisterende kunde:" />
            <ComboBox ItemsSource="{Binding Customers}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCustomer}" />

            <!-- Registrer ny kunde -->
            <CheckBox Content="Registrer ny kunde"
                      Margin="0,10,0,0"
                      IsChecked="{Binding RegisterNewCustomer}" />

            <TextBlock Text="Navn på ny kunde:" Margin="0,10,0,0" />
            <TextBox Text="{Binding NewCustomerName}" />

            <!-- Institution -->
            <TextBlock Text="Institution:" Margin="0,10,0,0" />
            <ComboBox ItemsSource="{Binding Institutions}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedInstitution}" />

            <!-- Dato -->
            <TextBlock Text="Dato:" Margin="0,10,0,0" />
            <DatePicker SelectedDate="{Binding Date}" />

            <!-- Timer -->
            <TextBlock Text="Timer arbejdet:" Margin="0,10,0,0" />
            <TextBox Text="{Binding Hours}" />

            <!-- Fysisk / online -->
            <CheckBox Content="Fysisk møde"
                      Margin="0,10,0,0"
                      IsChecked="{Binding IsPhysical}" />

            <!-- Kilometer -->
            <TextBlock Text="Antal kilometer kørt:" Margin="0,10,0,0" />
            <TextBox Text="{Binding Kilometers}" />
        </StackPanel>

        <!-- Knapper -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Gem"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding Path=SaveIncomeCommand}" CommandParameter="{Binding}"/>
            <Button Content="Annuller"
                    Width="80"
                    Command="{Binding Path=CancelIncomeCommand}" CommandParameter="{Binding}"/>
        </StackPanel>
    </Grid>
</Window>
