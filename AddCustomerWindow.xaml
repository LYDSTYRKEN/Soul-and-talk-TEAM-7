<Window x:Class="Soul_and_talk.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register new customer" Height="220" Width="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Customer name:" />
            <TextBox Text="{Binding CustomerName}" Margin="0,4,0,8" />

            <TextBlock Text="Institution:" />
            <ComboBox ItemsSource="{Binding Institutions}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedInstitution}"
                      Margin="0,4,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Save"
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding SaveCommand}" />
            <Button Content="Cancel"
                    Width="80"
                    Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
